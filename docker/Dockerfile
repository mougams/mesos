# First stage: Builder (version independent)
FROM rockylinux:8.7.20221219 AS builder

RUN dnf -y install epel-release
RUN dnf -y install \
  apr-devel \
  automake \
  cmake3 \
  curl-devel \
  cyrus-sasl-devel \
  cyrus-sasl-md5 \
  gcc-c++ \
  git \
  libblkid-devel \
  libevent-devel \
  libnl3-devel \
  libseccomp-devel \
  libtool \
  make \
  maven \
  mlocate \
  openssl-devel \
  patch \
  python3 \
  subversion-devel \
  vim \
  xfsprogs-devel \
  zlib-devel

RUN alternatives \
  --install /usr/local/bin/cmake cmake /usr/bin/cmake3 20 \
  --slave /usr/local/bin/ctest ctest /usr/bin/ctest3 \
  --slave /usr/local/bin/cpack cpack /usr/bin/cpack3 \
  --slave /usr/local/bin/ccmake ccmake /usr/bin/ccmake3 \
  --family cmake

WORKDIR /src/mesos

ARG CONFIGURE_EXTRA_FLAGS

CMD docker/build_mesos.sh ${CONFIGURE_EXTRA_FLAGS}

FROM builder AS runner

COPY docker/resources/mesos-agent /usr/bin/mesos-agent
COPY docker/resources/mesos-master /usr/bin/mesos-master

RUN chmod 0755 /usr/bin/mesos-master
RUN chmod 0755 /usr/bin/mesos-agent

RUN yum -y install ruby

CMD /usr/bin/mesos-agent

# Second stage: Building (version specific)
FROM runner AS built

COPY . /src/mesos
WORKDIR /src/mesos
RUN docker/build_mesos.sh ${CONFIGURE_EXTRA_FLAGS}

ENV MESOS_ROOT_DIR=/src/mesos
ENV MESOS_BUILD_DIR=/src/mesos
